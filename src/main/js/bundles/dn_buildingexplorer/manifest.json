{
    "name": "dn_buildingexplorer",
    "version": "1.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "building explorer",
        "3D",
        "Digital Twin"
    ],
    "main": "",
    "productName": "devnet-mapapps-buildingexplorer",
    "dependencies": {
        "esri": "^4.18.0",
        "esri-widgets": "^4.18.0",
        "map-widget": "^4.18.0",
        "apprt-binding": "^4.18.0",
        "apprt-core": "^4.18.0",
        "ct": "^4.18.0"
    },
    // "cssThemesExtension": [
    //     {
    //         "name": "*",
    //         "files": [
    //             "./css/styles.css"
    //         ]
    //     }
    // ],
    "layout-widgets": [
        {
            "widgetRole": "buildingExplorerWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "dockTool": "buildingExplorerToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": 350,
                    "h": 250,
                    "l": 20,
                    "t": 125
                },
                "minSize": {
                    "w": 350,
                    "h": 230
                },
                "windowClass": "daylight-window noPadding"
            }
        },
        {
            "widgetRole": "buildingExplorerWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "dockingBar": "${id}-dockingBarBottomLeft",
                "draggable": false,
                "fixEdgesInViewport": {
                    "l": true,
                    "r": true
                },
                "marginBox": {
                    "h": 250,
                    "b": 40,
                    "r": 0,
                    "l": 0
                }
            }
        },
        {
            "widgetRole": "buildingExplorerWidget",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "marginBox": {
                    "h": 250,
                    "w": 350,
                    "b": 0,
                    "r": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "BuildingExplorerController",
            "provides": [
                "dn_buildingexplorer.BuildingExplorerController"
            ],
            "properties": {
                "headingLevel": 3,
                "visibleElements": {
                    "levels": true,
                    "phases": true,
                    "disciplines": true
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "BuildingExplorerToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "buildingExplorerToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-transparency",
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true,
                "rules": {
                    "viewmode": "3D",
                    "ruleSuccessProperty": "visibility"
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_buildingexplorer.BuildingExplorerController"
                }
            ]
        }
    ]
}
